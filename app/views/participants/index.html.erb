<p id="notice"><%= notice %></p>

<h1>Participants</h1>

<table class="table">
  <thead>
    <tr>
      <th>Study ID</th>
      <th>Added by</th>
      <th>Age</th>
      <th>Questionnaire started</th>
      <th>Date added</th>
      <th>Date consented</th>
      <th>First name</th>
      <th>Gender</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.study_id %></td>
        <td><%= participant.added_by_id %></td>
        <td><%= participant.age %></td>
        <td><%= participant.questionnaire_started.try(:to_s, :short) %></td>
        <td><%= participant.date_added.try(:to_s, :short) %></td>
        <td><%= participant.date_consented.try(:to_s, :short) %></td>
        <td><%= participant.first_name %></td>
        <td><%= participant.gender %></td>
        <td><%= participant.status %></td>
        <td>
          <%= link_to 'Show', participant, :class=>"btn btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
